/* pages/customer-checkbox/customer-checkbox.wxss */
.wrapper{
  width : 100%;
  height: 100%;
  display:flex;/*Flex布局*/
  display: -webkit-flex; /* Safari */
  align-items:center;/*指定垂直居中*/
  flex-wrap: wrap;
}

.checked{
  box-sizing: border-box;
  border: solid 1px gray;
  text-align: center;
  border-radius: 25px;
  height: 40px;
  line-height: 40px;
  width: 30%; 
  margin-left: 8px; 
  background: greenyellow;
}

.nochecked{
  box-sizing: border-box;
  border: solid 1px gray;
  text-align: center;
  border-radius: 25px;
  height: 40px;
  line-height: 40px;
  width: 30%; 
  margin-left: 8px; 
}