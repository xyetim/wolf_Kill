/**index.wxss**/
.top{
  height: 45%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.icon{
  height: 40%;
  width: 40%;
  overflow: scroll;  
  margin-bottom: 30px;
}

.icon_ima{
  height: 100%;
  width: 100%;
}

.middle{
  height: 25%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.create{
  width : 80%;
  border: solid 1px #fff000;
  background: green;
  font-family: arial;
  color:white;
}

.join{
  width : 80%;
  border: solid 1px #fff000;
  background: blue;
  font-family: arial;
  color:white;
}

.bottom{
  width: 100%;
  margin-top: 20px;
}

.intro{
  width:100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.intro_text{
  display: block;
  border : solid 2px blue;
  color : blue;
  font-size: 14px;
  width: 30%;
  text-align : center;
  border-radius: 50px;
  height: 20px;
  padding-top: 2px;
}

