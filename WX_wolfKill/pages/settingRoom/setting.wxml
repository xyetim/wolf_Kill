<!--pages/settingRoom/setting.wxml-->
<view class="container">

  <form class="form" bindsubmit="formsubmit" bindreset="reset">
    <view class="sumNum" >
      <label>1、游戏总人数:</label> 
      <picker name="pickers" value="{{index}}" range="{{sums}}" bindchange='pickerChange'>
        <view class="picker">
          当前选择：{{sumPeople}}人
        </view>
      </picker>
    </view>

    <view class="gods">
      <label>2、有哪些神?</label>
        <checkbox-group name="checkbox" bindchange="checkboxChange">
          <label class="checkbox_gods" wx:for="{{gods}}">
            <checkbox class="item" value="{{item.value}}" checked="{{item.checked}}"/>{{item.name}}
          </label>
        </checkbox-group>
    </view>
    
    <view class="wolves">
      <label>3、有多少狼人 </label>
      <radio-group name="radiogroup" class="radio-group">
        <label class="radio" wx:for="{{wolves}}">
          <radio class="item" value="{{item.value}}" checked="{{item.checked}}"/>{{item.name}}
        </label>
       </radio-group>
    </view>

    <view class="farmer">
      <label>4、农民有多少个</label>
      <text name="text" class="num_farmer">{{sums[index]}}</text>
    </view>

    <view class="police">
      <label>5、是否竞选警长</label>
      <radio-group name="radio_police" class="radio-group">
        <label class="radio" wx:for="{{police}}">
          <radio class="item" value="{{item.value}}" checked="{{item.checked}}"/>{{item.name}}
        </label>
      </radio-group>
    </view>

    <view class="define">
      <button formType="submit">确定</button>
      <button formType="reset">重选</button>
    </view>

  </form>
</view>